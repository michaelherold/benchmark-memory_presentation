.hljs {
  background: color-00
  border-radius: 0.5em
  color: color-07
  display: block
  overflow-x: auto
  padding: 1em
  text-align: left
}

.hljs-comment,
.hljs-quote {
  color: color-03
  font-style: italic
}

.hljs-keyword,
.hljs-selector-tag {
  color: color-0E
}

.hljs-string,
.hljs-number,
.hljs-regexp,
.hljs-variable,
.hljs-template-variable {
  color: color-08
}

.hljs-type {
  color: color-09
}

.hljs-symbol,
.hljs-bullet,
.hljs-built_in,
.hljs-builtin-name,
.hljs-attr,
.hljs-link {
  color: color-0B
}

.hljs-params {
  // color: color-08
}

.hljs-tag,
.hljs-name {
  color: #e8bf6a
}

.hljs-subst {
  color: #519f50
}

.hljs-attribute {
  color: #cda869
}

.hljs-meta {
  color: #9b859d
}

.hljs-title,
.hljs-section {
  color: #ffc66d
}

.hljs-addition {
  background-color: #144212
  color: #e6e1dc
  display: inline-block
  width: 100%
}

.hljs-deletion {
  background-color: #600
  color: #e6e1dc
  display: inline-block
  width: 100%
}

.hljs-selector-class {
  color: #9b703f
}

.hljs-selector-id {
  color: #8b98ab
}

.hljs-emphasis {
  font-style: italic
}

.hljs-strong {
  font-weight: bold
}

.hljs-link {
  text-decoration: underline
}
