color-00 = #2b2b2b
color-01 = #272935
color-02 = #3a4055
color-03 = #5a647e
color-04 = #d4cfc9
color-05 = #e6e1dc
color-06 = #f4f1ed
color-07 = #f9f7f3
color-08 = #da4939
color-09 = #cc7833
color-0A = #ffc66d
color-0B = #a5c261
color-0C = #519f50
